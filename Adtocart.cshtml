@model BillingEnd.Models.Producto
@using Newtonsoft.Json;
@using System.Collections.Generic;
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;
@{
    ViewBag.Title = "Adtocart";
    
}
<br />
<br />
<br />

<body style="background: rgb(34,195,182);
        background: linear-gradient(0deg, rgba(34,195,182,1) 23%, rgba(253,128,45,1) 100%);">
    
    <div>
        @using (@Html.BeginForm("adtocart","Pedido"))
        {
            <div class="form-group">
                @Html.LabelFor(m=> m.ProdId, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.ProdId, new {@class="form-control",@readonly = "readonly"} )
                @Html.ValidationMessageFor(m=>m.ProdId, "ID OBLIGATORIO" , new {@class="text-danger"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m=> m.ProdMarca, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.ProdMarca, new {@class="form-control",@readonly = "readonly"} )
                @Html.ValidationMessageFor(m=>m.ProdMarca,"REQUERIDO", new {@class="text-danger"})

            </div>
            
            <div class="form-group">
                @Html.LabelFor(m=> m.ProdCantidad, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.ProdCantidad, new {@class="form-control",@readonly = "readonly"}  )
                @Html.ValidationMessageFor(m=>m.ProdCantidad,"REQUERIDO", new {@class="text-danger"})

            </div>
            <div class="form-group" >
                @Html.LabelFor(m=>m.ProdMedida, new {@style="color:white"})
                @Html.TextBoxFor(m=>m.ProdMedida,new {@class="form-control",@readonly = "readonly"}  )
               
            </div>

            <div class="form-group">
                @Html.LabelFor(m=> m.ProdUnitario, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.ProdUnitario, new {@class="form-control",@readonly = "readonly"}  )
            </div>

             <div class="form-group" >
                @Html.LabelFor(m=>m.PrdoBulto, new {@style="color:white"})
                @Html.TextBoxFor(m=>m.PrdoBulto,new {@class="form-control",@readonly = "readonly"}  )
            </div>
          
            <div class="form-group" >
                @Html.LabelFor(m=>m.ProdEtiqueta, new {@style="color:white"})
                @Html.TextBoxFor(m=>m.ProdEtiqueta,new {@class="form-control",@readonly = "readonly"}  )
            </div>
           
            

            <input type="submit" value="Agregar al pedido" class="btn btn-primary" />
        }

       
    </div>
</body>
