@model Cliente


@{
    ViewData["Title"] = "Home Page";
}

<style>

body{
    background-image: url(../img/Ohana.png);
}
</style>


<body style="background: rgb(161,222,157);
background: radial-gradient(circle, rgba(161,222,157,1) 40%, rgba(148,187,233,1) 100%);">
    
    <div class="">
        <h1 class="display-4" , style="color:white">Nuevo Producto</h1>
        @using (@Html.BeginForm("Crear","Cliente",FormMethod.Post,new {enctype="multipart/form-data"}))
        {

             <div class="form-group">
                @Html.LabelFor(m=> m.CliNombre, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.CliNombre, new {@class="form-control",@placeholder = "Nombre"})
            
            </div>

            <div class="form-group">
                @Html.LabelFor(m=> m.CliDni, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.CliDni, new {@class="form-control",@placeholder = "DNI"})
            
            </div>

            <div class="form-group">
                @Html.LabelFor(m=> m.CliDireccion, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.CliDireccion, new {@class="form-control",@placeholder = "Direccion"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m=> m.CliNum, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.CliNum, new {@class="form-control",@placeholder = "Numero telefonico"} )
            </div>
              
            <div class="form-group">
                @Html.LabelFor(m=> m.CliCuil, new {@style="color:white"})
                @Html.TextBoxFor(m=> m.CliCuil, new {@class="form-control",@placeholder = "CUIL"} )
            </div>

            <br>
           
        

            <div class="form-group">
                @Html.ValidationSummary(false,"SOLUCIONE LO SIGUENTE",new {@class="text-danger"})
            </div>


            <input type="submit" class="btn btn-success" value="Sumar Producto" />
        }


    </div>

</body>


